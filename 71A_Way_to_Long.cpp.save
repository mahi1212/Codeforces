#include<bits/stdc++.h>
using namespace std;

int main(){
    int t;
    string s;
    cin >> t;
    while(t--){
        cin >> s;
        int len = s.length();

        if(len > 10){
            cout<< s.front()<< len - 2 << s.back() << endl;
        }else{
            cout << s << endl;
        }

    }
    return 0;
}
